.content.card.pure-g.login
  .pure-u-1-1.pure-u-md-1-2.login-header
    %h1
      %span.fa.fa-sign-in
      Login
  .pure-u-1-1.pure-u-md-1-2.right.login-header
    %h1
      Register
      %span.fa.fa-user-plus
  .pure-u-1-1.pure-u-md-1-2.login-body
    %form.pure-form#login-form(action="/login" method="post")
      %fieldset.pure-group
        %input(type="email" placeholder="Email" name="email")
        %input(type="password" placeholder="Password" name="password")
        %button.pure-button.pure-button-primary(type="submit") Login
  .pure-u-1-1.pure-u-md-1-2.login-body
    %form.pure-form#register-form(action="/register" method="post")
      %fieldset.pure-group
        %input(type="email" placeholder="Email" name="email")
        %input(type="text" placeholder="Name" name="username")
        %input(type="password" placeholder="Password" name="password")
        %button.pure-button.button-success(type="submit") Register
