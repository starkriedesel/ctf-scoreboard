.content.pure-g.card.instructions
  .pure-u-1.pure-u-md-1-2.instructions-header
    %h1
      %span.fa.fa-question-circle-o
      Instructions
  .pure-u-1.pure-u-md-1-2.right.instructions-header
    %h1
      Submit Flag
      %span.fa.fa-flag
  .pure-u-1.pure-u-md-1-2.instructions-body
    %ol
      %li
        Click on a track (
        %span.fa.fa-train
        ) to get started.
      %li
        Find flags (
        %span.fa.fa-flag
        ) and submit them for points.
      %li
        Click on a flag (
        %span.fa.fa-flag
        ) to get a hint.
  .pure-u-1.pure-u-md-1-2.instructions-body
    %form.pure-form(action='/flag' method='post')
      %fieldset.pure-group
        %input.pure-input-1(type="text" placeholder="flag{xxxxxxx}" name="value")
        %button.pure-input-1.pure-button.pure-button-primary(type="submit")
          Submit
          %span.fa.fa-flag

.content.track-tables.pure-g
  - @tracks.each do |track|
    .pure-u-1.pure-u-md-1-3
      .track-table(class="#{track.color}")
        %a(href="#")
          .track-header
            %span.title
              = track.name
              %span.fa.fa-train
        %ul.track-list
          - track.flags.order_by(order: :asc).each do |flag|
            - if @user.flags.include? flag
              %li.completed
                = flag.name
                %span.fa.fa-check
            - elsif flag.locked or track.locked
              %li.locked
                = flag.name
                %span.fa.fa-lock
            - else
              %a(href="#" data-flag-id="#{flag.id}")
                %li
                  = flag.name
                  %span.fa.fa-flag
