.content.pure-g.card.scoreboard
  .pure-u-1-3
  .pure-u-1-3
    %h1(style="text-align: center")
      Scoreboard
  .pure-u-1-3
  .pure-u-1-3
  .pure-u-1-3
    %table.pure-table.pure-table-horizontal(style="width:100%")
      %thead
        %tr
          %th Place
          %th Name
          %th Affiliation
          %th Score
      %tbody
        - @users.each_with_index do |user, index|
          %tr
            %td= index + 1
            %td= user.name
            %td SMU
            %td= user.score
